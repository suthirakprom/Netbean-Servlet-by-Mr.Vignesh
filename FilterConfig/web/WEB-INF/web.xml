<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>NextServlet</servlet-name>
        <servlet-class>NextServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NextServlet</servlet-name>
        <url-pattern>/NextServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>MyFilter</filter-name>
        <filter-class>MyFilter</filter-class>
        <init-param>
            <param-name>school</param-name>                 <!--here is the special part. The key-->
            <param-value>KIT</param-value>                  <!--the value-->
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>MyFilter</filter-name>                 <!--don't forget to add the mapping to our servlet-->
        <url-pattern>/NextServlet</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
